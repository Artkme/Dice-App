<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/app_background_color"
    >

    <Button
        android:id="@+id/roll_button"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/roll_button"
        android:text="@string/roll_button_txt"
        android:textColor="@color/app_background_color"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/dice_image"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dice_txt"
            android:src="@drawable/dice_empty"
            />

        <ImageView
            android:id="@+id/dice_image_sceond"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dice_txt"
            android:src="@drawable/dice_empty" />
    </LinearLayout>

</RelativeLayout>